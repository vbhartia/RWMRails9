    var comment_to_add = ''
    
    comment_to_add += '<div class="comment_element">'

      comment_to_add += '<img class=\'profile_image_in_comment\' src=\''

        comment_to_add += comment_element.user_info.profile_image_url
      comment_to_add += '\'/>'


      comment_to_add += '<table class="comment_table">'
        comment_to_add += '<tr>'
