              comment_to_add += $.timeago(comment_element.created_at)

              comment_to_add += '</div>'       

          comment_to_add += '</td>'
        comment_to_add += '</tr>'

        comment_to_add += '<tr>'
          comment_to_add += '<td >'
            comment_to_add += '<div class=\'comment_text\'>'

